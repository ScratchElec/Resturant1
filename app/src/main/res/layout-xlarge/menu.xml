<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/back"
     >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1129dp" >

            <ImageButton
                android:id="@+id/cafe"
                android:layout_width="400dp"
                android:layout_height="120dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="184dp"
                android:layout_marginTop="180dp"
                android:background="@drawable/cafe" />

            <ImageButton
                android:id="@+id/rest"
                android:layout_width="400dp"
                android:layout_height="120dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/cafe"
                android:layout_marginLeft="184dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/rests" />
            
            <ImageButton
                android:id="@+id/pat"
                android:layout_width="400dp"
                android:layout_height="120dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/rest"
                android:layout_marginLeft="184dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/pat" />
             <ImageButton
                android:id="@+id/ice"
                android:layout_width="400dp"
                android:layout_height="120dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/pat"
                android:layout_marginLeft="184dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/ice" />
        </RelativeLayout>

</ScrollView>
</RelativeLayout>